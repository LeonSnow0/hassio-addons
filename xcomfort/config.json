{
    "name": "xComfort",
    "version": "0.2",
    "slug": "xcomfort",
    "description": "Eaton xComfort to MQTT gateway",
    "startup": "application",
    "boot": "auto",
    "arch": [
        "aarch64",
        "amd64",
        "armhf",
        "armv7",
        "i386"
    ],
    "privileged": [
        "SYS_RAWIO"
    ],
    "devices": [
        "/dev/bus/usb:/dev/bus/usb:rwm"
    ],
    "map": [
        "config"
    ],
    "services": [
        "mqtt:need"
    ],
    "options": {
        "mqtt_client_id": "xcomfort",
        "datapoints_file": "Datenpunkte.txt",
        "device_number": 0,
        "ha_discovery": true,
        "ha_discovery_prefix": "homeassistant",
        "verbose": false
    },
    "schema": {
        "mqtt_client_id": "str",
        "datapoints_file": "str",
        "device_number": "int",
        "ha_discovery": "bool",
        "ha_discovery_prefix": "str",
        "verbose": "bool"
    }
}
